{
    "components": {
        "schemas": {
            "UpdateDepositAccount": {
                "title": "Update Deposit Account",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["depositAccount"],
                        "default": "depositAccount"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "tags": {
                                "$ref": "../types.json#/components/schemas/Tags"
                            },
                            "depositProduct": {
                                "type": "string"
                            }
                        }
                    }
                },
                "additionalProperties": false,
                "required": ["type", "attributes"]
            },
            "UpdateCreditAccount": {
                "title": "Update Credit Account",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["creditAccount"],
                        "default": "creditAccount"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "tags": {
                                "$ref": "../types.json#/components/schemas/Tags"
                            },
                            "creditLimit": {
                                "type": "integer"
                            }
                        }
                    }
                },
                "additionalProperties": false,
                "required": ["type", "attributes"]
            },
            "UpdateAccountRequest": {
                "title": "Update Account",
                "type": "object",
                "properties": {
                    "data": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/UpdateDepositAccount"
                            },
                            {
                                "$ref": "#/components/schemas/UpdateCreditAccount"
                            }
                        ]
                    }
                },
                "additionalProperties": false,
                "required": ["data"]
            }
        }
    }
}
