        "patch": {
            "tags": ["unit"],
            "operationId": "updateApplication",
            "summary": "Update Application",
            "description": "Update an Application via API. Can be used to update individual applications, sole proprietorships, business applications, and business officers.",
            "parameters": [
                {
                    "schema": {
                        "type": "string"
                    },
                    "name": "applicationId",
