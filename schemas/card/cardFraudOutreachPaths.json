    "cardFraudCase": {
        "get": {
            "tags": ["unit"],
            "operationId": "getCardFraudCase",
            "summary": "Get Card Fraud Case by Id",
            "description": "Get a card fraud case by id.",
            "parameters": [
                {
                    "schema": {
                        "type": "string"
                    },
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the card fraud case to get"
                }
            ],
            "responses": {
                "200": {
                    "description": "Successful Response",
                    "content": {
                        "application/vnd.api+json; charset=utf-8": {
