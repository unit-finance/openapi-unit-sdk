{
    "components": {
        "schemas": {
            "StoreLocation": {
                "title": "Store Location",
                "type": "object",
                "description": "Cash Deposit Store Location resource.",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["storeLocation"],
                        "default": "storeLocation"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "storeId": {
                                "type": "string",
                                "description": "The unique identifier of the store."
                            },
                            "retailerName": {
                                "type": "string",
                                "description": "The name of the retailer."
                            },
                            "phone": {
                                "type": "string",
                                "description": "The phone number of the store."
                            },
                            "address": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/Address" },
                                    { "description": "The address of the store." }
                                ]
                            },
                            "coordinates": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/Coordinates" },
                                    { "description": "The geographical coordinates of the store location." }
                                ]
                            },
                            "distance": {
                                "type": "number",
                                "description": "The distance from the requested coordinates to the store, in miles."
                            }
                        },
                        "required": [
                            "storeId",
                            "retailerName",
                            "phone",
                            "address",
                            "coordinates",
                            "distance"
                        ],
                        "additionalProperties": false
                    }
                },
                "required": ["type", "attributes"]
            }
        }
    }
}
