{
    "components": {
        "schemas": {
            "CreateCheckPaymentRelationships": {
                "allOf": [
                    {
                        "type": "object",
                        "required": ["account", "customer"]
                    },
                    {
                        "$ref": "../relationships.json#/components/schemas/AccountRelationship"
                    },
                    {
                        "$ref": "../relationships.json#/components/schemas/CustomerRelationship"
                    }
                ]
            },
            "CreateCheckPaymentRequest": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": ["checkPayment"],
                                "default": "checkPayment"
                            },
                            "attributes": {
                                "type": "object",
                                "properties": {
                                    "counterparty": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "maxLength": 40,
                                                "description": "Name of the check payment recipient (maximum of 40 characters)"
                                            },
                                            "address": {
                                                "allOf": [
                                                    { "$ref": "../types.json#/components/schemas/Address" },
                                                    { "description": "Address of the check payment recipient. Must be a valid US address." }
                                                ]
                                            },
                                            "counterpartyMoved": {
                                                "type": "boolean",
                                                "description": "Indicates if the counterparty has moved"
                                            }
                                        },
                                        "required": ["name", "address"],
                                        "additionalProperties": false
                                    },
                                    "amount": {
                                        "type": "integer",
                                        "minimum": 1,
                                        "format": "int64",
                                        "description": "The check amount (in cents)"
                                    },
                                    "idempotencyKey": {
                                        "allOf": [
                                            { "$ref": "../types.json#/components/schemas/IdempotencyKey" },
                                            { "description": "A unique key used to prevent duplicate processing" }
                                        ]
                                    },
                                    "sendDate": {
                                        "type": "string",
                                        "format": "date",
                                        "description": "Optional. The date when the check should be sent. If not provided, the check will be sent immediately."
                                    },
                                    "memo": {
                                        "type": "string",
                                        "description": "Optional. Memo for the check payment, up to 40 characters."
                                    },
                                    "description": {
                                        "type": "string",
                                        "minLength": 1,
                                        "maxLength": 50,
                                        "description": "Description of the check payment (maximum of 50 characters)"
                                    },
                                    "tags": {
                                        "allOf": [
                                            { "$ref": "../types.json#/components/schemas/Tags" },
                                            { "description": "Optional tags for the check payment. See https://www.unit.co/docs/api/#tags" }
                                        ]
                                    }
                                },
                                "required": [
                                    "counterparty",
                                    "amount",
                                    "idempotencyKey",
                                    "description"
                                ],
                                "additionalProperties": false
                            },
                            "relationships": {
                                "$ref": "#/components/schemas/CreateCheckPaymentRelationships"
                            }
                        },
                        "required": ["type", "attributes", "relationships"],
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false,
                "required": ["data"]
            }
        }
    }
}
