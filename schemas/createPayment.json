        "CreateAchPayment": {
            "title": "Create ACH Payment to inline Counterparty",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "default": "achPayment"
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "amount": {
                            "type": "integer"
                        },
                        "description": {
                            "type": "string"
                        },
                        "addenda": {
                            "type": "string"
                        },
                        "direction": {
