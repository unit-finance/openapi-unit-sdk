{
    "createFee": {
        "post": {
            "tags": [
                "unit"
            ],
            "operationId": "createFee",
            "summary": "Create Fee",
            "description": "Creates a fee for an Account. Fees are a way for you to bill your customer for their activity, and can be used for everything from monthly subscriptions to financial activity fees (payments, card issuance etc.)",
            "requestBody": {
                "description": "Create Fee Request",
                "required": true,
                "content": {
                    "application/vnd.api+json": {
                        "schema": {
                            "$ref": "./createFee.json#/components/schemas/CreateFeeRequest"
                        }
                    }
                }
            },
            "responses": {
                "201": {
                    "description": "Successful Response",
                    "content": {
                        "application/vnd.api+json": {
                            "schema": {
                                "type": "object",
                                "title": "Unit Fee Response",
                                "properties": {
                                    "data": {
                                        "$ref": "./fee.json#/components/schemas/Fee"
                                    }
                                }
                            }
                        }
                    }
                },
                "default": {
                    "$ref": "../types.json#/components/schemas/DefaultError"
                }
            }
        }
    },
    "reverseFee": {
        "post": {
            "tags": [
                "unit"
            ],
            "operationId": "reverseFee",
            "summary": "Reverse Fee",
            "description": "Reverse a fee for an Account.",
            "requestBody": {
                "description": "Reverse Fee Request",
                "required": true,
                "content": {
                    "application/vnd.api+json": {
                        "schema": {
                            "$ref": "./reverseFee.json#/components/schemas/ReverseFeeRequest"
                        }
                    }
                }
            },
            "responses": {
                "201": {
                    "description": "Successful Response",
                    "content": {
                        "application/vnd.api+json": {
                            "schema": {
                                "type": "object",
                                "title": "Unit Fee Reversal Response",
                                "properties": {
                                    "data": {
                                        "$ref": "./feeReversal.json#/components/schemas/FeeReversal"
                                    }
                                }
                            }
                        }
                    }
                },
                "default": {
                    "$ref": "../types.json#/components/schemas/DefaultError"
                }
            }
        }
    }
}