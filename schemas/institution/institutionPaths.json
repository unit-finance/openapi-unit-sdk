            "responses": {
                "200": {
                    "description": "Successful Response",
                    "content": {
                        "application/vnd.api+json; charset=utf-8": {
                            "schema": {
                                "type": "object",
                                "title": "Unit Institution Response",
                                "properties": {
                                    "data": {
                                        "$ref": "./institution.json#/components/schemas/Institution"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
