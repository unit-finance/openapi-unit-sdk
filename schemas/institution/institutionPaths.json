{
    "getInstitution": {
        "get": {
            "tags": ["unit"],
            "operationId": "getInstitution",
            "parameters": [
                {
                    "schema": {
                        "type": "string"
                    },
                    "name": "routingNumber",
                    "in": "path",
                    "required": true,
                    "description": "Routing number of the financial institution to get"
                }
            ],
            "summary": "Get Institution by Routing Number",
