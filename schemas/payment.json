        "counterparty": {
            "title": "Counterparty",
            "type": "object",
            "properties": {
                "routingNumber": {
                    "type": "string",
                    "pattern": "^\\d{9}$"
                },
                "accountNumber": {
                    "type": "string",
                    "pattern": "^\\d{1,17}$"
                },
                "accountType": {
                    "type": "string",
                    "enum": [
                        "Checking",
                        "Savings",
                        "Loan"
                    ]
                },
                "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50
                }
            },
            "additionalProperties": false,
            "required": [
                "routingNumber",
                "accountNumber",
                "accountType",
                "name"
            ]
        },
        "wireCounterparty": {
            "title": "WireCounterparty",
