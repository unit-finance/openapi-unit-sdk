{
    "components": {
        "schemas": {
            "CreateCheckStopPaymentRelationships": {
                "allOf": [
                    {
                        "type": "object",
                        "required": ["account"]
                    },
                    {
                        "allOf": [
                            { "$ref": "../relationships.json#/components/schemas/AccountRelationship" },
                            { "description": "The account that payments will be stopped for." }
                        ]
                    }
                ]
            },
            "CreateAchStopPaymentRelationships": {
                "allOf": [
                    {
                        "type": "object",
                        "required": ["account"]
                    },
                    {
                        "allOf": [
                            { "$ref": "../relationships.json#/components/schemas/AccountRelationship" },
                            { "description": "The account that payments will be stopped for." }
                        ]
                    }
                ]
            },
            "CreateCheckStopPayment": {
                "title": "Create Check Stop Payment",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["checkStopPayment"],
                        "default": "checkStopPayment"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "amount": {
                                "type": "integer",
                                "minimum": 1,
                                "format": "int64",
                                "description": "Optional. The amount (in cents) to look on payments to stop."
                            },
                            "checkNumber": {
                                "type": "string",
                                "maxLength": 12,
                                "description": "The check number to look on a check payment to stop."
                            },
                            "tags": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/Tags" },
                                    { "description": "Optional. See Tags." }
                                ]
                            },
                            "idempotencyKey": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/IdempotencyKey" },
                                    { "description": "Optional, but strongly recommended. See Idempotency." }
                                ]
                            }
                        },
                        "required": ["checkNumber"],
                        "additionalProperties": false
                    },
                    "relationships": {
                        "$ref": "#/components/schemas/CreateCheckStopPaymentRelationships"
                    }
                },
                "required": ["type", "attributes", "relationships"],
                "additionalProperties": false
            },
            "CreateAchStopPayment": {
                "title": "Create ACH Stop Payment",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["achStopPayment"],
                        "default": "achStopPayment"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "minAmount": {
                                "type": "integer",
                                "format": "int64",
                                "description": "Optional. The amount (in cents) above which a payment will be stopped. At least one originatorName or minAmount must be provided."
                            },
                            "originatorName": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Optional. The name of the originator of the payment to look for in payments to stop. At least one originatorName or minAmount must be provided."
                            },
                            "direction": {
                                "type": "string",
                                "default": "debit",
                                "description": "Debit only."
                            },
                            "expiration": {
                                "type": "string",
                                "format": "date",
                                "description": "Optional. Date only (e.g. \"2001-08-15\")."
                            },
                            "isMultiUse": {
                                "type": "boolean",
                                "description": "Optional. Available only for ACH Stop Payments. False by default."
                            },
                            "description": {
                                "type": "string",
                                "maxLength": 255,
                                "description": "Up to 255 characters"
                            },
                            "tags": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/Tags" },
                                    { "description": "Optional. See Tags." }
                                ]
                            },
                            "idempotencyKey": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/IdempotencyKey" },
                                    { "description": "Optional, but strongly recommended. See Idempotency." }
                                ]
                            }
                        },
                        "required": ["direction", "description"]
                    },
                    "relationships": {
                        "$ref": "#/components/schemas/CreateAchStopPaymentRelationships"
                    }
                },
                "required": ["type", "attributes", "relationships"],
                "additionalProperties": false
            },
            "CreateStopPaymentRequest": {
                "type": "object",
                "properties": {
                    "data": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/CreateCheckStopPayment"
                            },
                            {
                                "$ref": "#/components/schemas/CreateAchStopPayment"
                            }
                        ]
                    }
                },
                "additionalProperties": false,
                "required": ["data"]
            }
        }
    }
}
