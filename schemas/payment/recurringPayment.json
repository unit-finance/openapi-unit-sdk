                                        "maxLength": 80
                                    },
                                    "tags": {
                                        "$ref": "../types.json#/components/schemas/Tags"
                                    },
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "Pending",
                                            "Active",
                                            "Completed",
                                            "Disabled"
                                        ]
                                    },
                                    "schedule": {
                                        "$ref": "../types.json#/components/schemas/CreateSchedule"
                                    },
                                    "numberOfPayments": {
                                        "type": "integer"
                                    }
                                },
                                "required": [
                                    "createdAt",
                                    "status",
                                    "description",
                                    "amount",
                                    "schedule",
