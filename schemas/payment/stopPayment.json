{
    "components": {
        "schemas": {
            "CheckStopPaymentRelationships": {
                "allOf": [
                    {
                        "type": "object",
                        "required": ["account"],
                        "additionalProperties": false
                    },
                    {
                        "allOf": [
                            { "$ref": "../relationships.json#/components/schemas/AccountRelationship" },
                            { "description": "The account that payments will be stopped for." }
                        ]
                    },
                    {
                        "$ref": "../relationships.json#/components/schemas/CustomerRelationship"
                    },
                    {
                        "$ref": "../relationships.json#/components/schemas/CustomersRelationship"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "stoppedPayments": {
                                "type": "object",
                                "properties": {
                                    "data": {
                                        "type": "array",
                                        "items": {
                                            "$ref": "../check/checkPayment.json#/components/schemas/CheckPayment"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ]
            },
            "AchStopPaymentRelationships": {
                "allOf": [
                    {
                        "type": "object",
                        "required": ["account"],
                        "additionalProperties": false
                    },
                    {
                        "allOf": [
                            { "$ref": "../relationships.json#/components/schemas/AccountRelationship" },
                            { "description": "The account that payments will be stopped for." }
                        ]
                    },
                    {
                        "$ref": "../relationships.json#/components/schemas/CustomerRelationship"
                    },
                    {
                        "$ref": "../relationships.json#/components/schemas/CustomersRelationship"
                    }
                ]
            },
            "CheckStopPaymentStatus": {
                "type": "string",
                "enum": ["Active", "Disabled"],
                "description": "The possible status values are: Active - The Stop Payment is active and will stop incoming check payments that fits its criteria. Disabled - The Stop Payment is disabled and it will not stop any check payments."
            },
            "AchStopPaymentDisableReason": {
                "type": "string",
                "enum": ["Expired", "Requested", "PaymentStopped"]
            },
            "CheckStopPayment": {
                "title": "Check Stop Payment",
                "type": "object",
                "properties": {
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "createdAt": {
                                "type": "string",
                                "format": "date-time",
                                "description": "ISO8601 timestamp when the stop payment was created"
                            },
                            "updatedAt": {
                                "type": "string",
                                "format": "date-time",
                                "description": "ISO8601 timestamp when the stop payment was last updated"
                            },
                            "amount": {
                                "type": "integer",
                                "format": "int64",
                                "description": "Optional. The amount (in cents) to look on payments to stop."
                            },
                            "status": {
                                "allOf": [
                                    { "$ref": "#/components/schemas/CheckStopPaymentStatus" },
                                    { "description": "Status of the stop payment (Active or Disabled)" }
                                ]
                            },
                            "tags": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/Tags" },
                                    { "description": "Optional. See Tags." }
                                ]
                            },
                            "checkNumber": {
                                "type": "string",
                                "description": "The check number to look on a check payment to stop."
                            }
                        },
                        "required": [
                            "createdAt",
                            "updatedAt",
                            "status",
                            "checkNumber",
                            "tags"
                        ],
                        "additionalProperties": false
                    },
                    "relationships": {
                        "$ref": "#/components/schemas/CheckStopPaymentRelationships"
                    }
                }
            },
            "AchStopPayment": {
                "title": "ACH Stop Payment",
                "type": "object",
                "properties": {
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "createdAt": {
                                "type": "string",
                                "format": "date",
                                "description": "ISO8601 date when the stop payment was created"
                            },
                            "updatedAt": {
                                "type": "string",
                                "format": "date",
                                "description": "ISO8601 date when the stop payment was last updated"
                            },
                            "minAmount": {
                                "type": "integer",
                                "format": "int64",
                                "description": "Optional. The amount (in cents) above which a payment will be stopped. At least one originatorName or minAmount must be provided."
                            },
                            "originatorName": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Optional. The name of the originator of the payment to look for in payments to stop. At least one originatorName or minAmount must be provided."
                            },
                            "direction": {
                                "type": "string",
                                "default": "debit",
                                "description": "Debit only."
                            },
                            "expiration": {
                                "type": "string",
                                "format": "date",
                                "description": "Optional. Date only (e.g. \"2001-08-15\")."
                            },
                            "isMultiUse": {
                                "type": "boolean",
                                "description": "Optional. Available only for ACH Stop Payments. False by default."
                            },
                            "description": {
                                "type": "string",
                                "description": "Up to 255 characters"
                            },
                            "disableReason": {
                                "$ref": "#/components/schemas/AchStopPaymentDisableReason"
                            },
                            "status": {
                                "allOf": [
                                    { "$ref": "#/components/schemas/CheckStopPaymentStatus" },
                                    { "description": "Status of the stop payment (Active or Disabled)" }
                                ]
                            },
                            "idempotencyKey": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/IdempotencyKey" },
                                    { "description": "Optional, but strongly recommended. See Idempotency." }
                                ]
                            },
                            "tags": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/Tags" },
                                    { "description": "Optional. See Tags." }
                                ]
                            }
                        },
                        "required": [
                            "createdAt",
                            "updatedAt",
                            "direction",
                            "expiration",
                            "isMultiUse",
                            "description",
                            "status",
                            "tags"
                        ],
                        "additionalProperties": false
                    },
                    "relationships": {
                        "$ref": "#/components/schemas/AchStopPaymentRelationships"
                    }
                }
            },
            "StopPayment": {
                "title": "Stop Payment Resource",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["checkStopPayment", "achStopPayment"]
                    },
                    "id": {
                        "$ref": "../types.json#/components/schemas/Identifier"
                    }
                },
                "required": ["type", "id"],
                "discriminator": {
                    "propertyName": "type",
                    "mapping": {
                        "checkStopPayment": "#/components/schemas/CheckStopPayment",
                        "achStopPayment": "#/components/schemas/AchStopPayment"
                    }
                }
            }
        }
    }
}
