{
    "components": {
        "schemas": {
            "UpdateAchStopPayment": {
                "title": "Update Ach Stop Payment",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["achStopPayment"],
                        "default": "achStopPayment"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "tags": {
                                "allOf": [
                                    { "$ref": "../types.json#/components/schemas/Tags" },
                                    { "description": "Optional. See Updating Tags." }
                                ]
                            },
                            "expiration": {
                                "type": "string",
                                "format": "date",
                                "description": "Optional. Date only (e.g. \"2026-08-15\")."
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "required": ["type", "attributes"],
                "additionalProperties": false
            },
            "UpdateStopPaymentRequest": {
                "title": "Update Stop Payment",
                "type": "object",
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/UpdateAchStopPayment"
                    }
                },
                "additionalProperties": false,
                "required": ["data"]
            }
        }
    }
}
