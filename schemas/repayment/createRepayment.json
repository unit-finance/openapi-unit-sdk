                                "type": "string",
                                "description": "If this field is populated, its contents will be returned as the bookTransaction's summary field (maximum of 100 characters)."
                            },
                            "tags": {
                                "type": "object",
                                "description": "Optional. See Tags (https://www.unit.co/docs/api/#tags)."
                            },
                            "idempotencyKey": {
                                "type": "string",
                                "description": "Optional. See Idempotency (https://www.unit.co/docs/api/#intro-idempotency)."
                            }
