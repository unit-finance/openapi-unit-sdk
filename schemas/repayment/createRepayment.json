                            },
                            "amount": {
                                "type": "number",
                                "description": "The amount (cents) to repay."
                            },
                            "addenda": {
                                "type": "string",
                                "description": "Additional information about the payment."
                            },
                            "sameDay": {
                                "type": "boolean",
                                "description": "Indicates if the payment should be processed as a same-day ACH transaction."
                            },
                            "secCode": {
                                "type": "string",
