{
    "components": {
        "schemas": {
            "rewardRelationships": {
            "type": "object",
            "properties": {
                "receivingAccount": {
                    "$ref": "types.json#/definitions/Relationship"
                },
                "fundingAccount": {
                    "$ref": "types.json#/definitions/Relationship"
                },
                "customer": {
                    "$ref": "types.json#/definitions/Relationship"
                },
                "rewardedTransaction": {
                    "$ref": "types.json#/definitions/Relationship"
                },
                "transaction": {
                    "type": "object",
                    "title": "transactionRelationship",
                    "properties": {
                        "data": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "default": "transaction"
                                },
                                "id": {
                                    "$ref": "types.json#/definitions/identifier"
                                }
                            },
                            "required": [
                                "type",
                                "id"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "data"
                    ],
                    "additionalProperties": false
                },
                "card": {
                    "title": "cardRelationship",
                    "type": "object",
                    "properties": {
                        "data": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "default": "card"
                                },
                                "id": {
                                    "$ref": "types.json#/definitions/identifier"
                                }
                            },
                            "required": [
                                "type",
                                "id"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "data"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "receivingAccount",
                "fundingAccount",
                "customer"
            ],
            "additionalProperties": false
        },
            "Reward": {
                "title": "Reward",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "default": "reward"
                    },
                    "id": {
                        "$ref": "types.json#/definitions/identifier"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "createdAt": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "amount": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "description": {
                                "type": "string",
                                "maxLength": 50
                            },
                            "status": {
                                "type": "string",
                                "enum": [
                                    "Rejected",
                                    "Sent"
                                ]
                            },
                            "rejectReason": {
                                "type": "string"
                            },
                            "tags": {
                                "$ref": "tags.json#/definitions/tags"
                            }
                        },
                        "required": [
                            "description",
                            "createdAt",
                            "amount",
                            "tags",
                            "status"
                        ],
                        "additionalProperties": false
                    },
                    "relationships": {
                        "$ref": "#/components/schemas/rewardRelationships"
                    }
                },
                "required": [
                    "type",
                    "id",
                    "relationships",
                    "attributes"
                ],
                "additionalProperties": false
            },
            "UnitRewardResponse": {
                "type": "object",
                "title": "UnitRewardResponse",
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/Reward"
                    }
                }
            },
            "UnitRewardListResponse": {
                "type": "object",
                "title": "UnitRewardListResponse",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Reward"
                        }
                    }
                }
            }
        }
    },
    "rewards": {
        "post": {
            "tags": [
                "Create Reward"
            ],
            "operationId": "execute",
            "summary": "Create Reward",
            "description": "Create a Reward via API ",
            "requestBody": {
                "description": "Create Reward Request",
                "required": true,
                "content": {
                    "application/vnd.api+json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "$ref": "createReward.json"
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "201": {
                    "description": "Successful Response",
                    "content": {
                        "application/vnd.api+json": {
                            "schema": {
                                "$ref": "#/components/schemas/UnitRewardResponse"
                            }
                        }
                    }
                }
            }
        },
        "get": {
            "tags": [
                "Get List Rewards"
            ],
            "operationId": "execute",
            "summary": "Get Rewards List",
            "description": "Get Rewards List from API ",
            "responses": {
                "200": {
                    "description": "Successful Response",
                    "content": {
                        "application/vnd.api+json; charset=utf-8": {
                            "schema": {
                                "$ref": "#/components/schemas/UnitRewardListResponse"
                            }
                        }
                    }
                }
            }
        }
    },
    "get_reward": {
        "get": {
            "tags": [
                "Get Reward"
            ],
            "operationId": "execute",
            "parameters": [
                {
                    "schema": {
                        "type": "string"
                    },
                    "name": "rewardId",
                    "in": "path",
                    "required": true,
                    "description": "ID of the reward to get"
                }
            ],
            "summary": "Get Reward by Id",
            "description": "Get a Reward from API ",
            "responses": {
                "200": {
                    "description": "Successful Response",
                    "content": {
                        "application/vnd.api+json; charset=utf-8": {
                            "schema": {
                                "$ref": "#/components/schemas/UnitRewardResponse"
                            }
                        }
                    }
                }
            }
        }
    }
}