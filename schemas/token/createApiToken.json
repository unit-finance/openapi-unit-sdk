{
    "components": {
        "schemas": {
            "CreateApiTokenRequest": {
                "title": "Create API Token",
                "type": "object",
                "properties": {
                    "data": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": ["apiToken"],
                                "default": "apiToken"
                            },
                            "attributes": {
                                "type": "object",
                                "properties": {
                                    "scope": {
                                        "type": "string",
                                        "description": "List of Scopes separated by spaces."
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "A description of the Org API token."
                                    },
                                    "expiration": {
                                        "type": "string",
                                        "format": "date-time",
                                        "description": "Expiration date of the Org API token."
                                    },
                                    "sourceIp": {
                                        "type": "string",
                                        "description": "Optional. A comma separated list of IP addresses that are allowed to use the Org API token (no spaces allowed)."
                                    },
                                    "resources": {
                                        "type": "array",
                                        "minItems": 1,
                                        "description": "Optional. Restrict token to one or more specific resources. To one or many cards and/or to one or many accounts (cards under it, payments, transactions).",
                                        "items": {
                                            "$ref": "./apiToken.json#/components/schemas/RestrictedResource"
                                        },
                                        "nullable": true
                                    }
                                },
                                "additionalProperties": false,
                                "required": ["description", "expiration", "scope"]
                            }
                        },
                        "additionalProperties": false,
                        "required": ["type", "attributes"]
                    }
                }
            }
        }
    }
}
