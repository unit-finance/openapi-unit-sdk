{
    "components": {
        "schemas": {
            "CustomerToken": {
                "title": "Customer Token Resource",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["customerBearerToken"],
                        "default": "customerBearerToken"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "token": {
                                "type": "string",
                                "description": "The token issued for the customer."
                            },
                            "expiresIn": {
                                "type": "integer",
                                "description": "The lifetime of the token (in seconds)."
                            }
                        }
                    }
                },
                "required": ["type", "attributes"],
                "additionalProperties": false
            }
        }
    }
}
