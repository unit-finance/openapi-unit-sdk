{
    "components": {
        "schemas": {
            "patchAchPayment": {
                "title": "Patch ACH Payment",
                "type": "object",
                "properties": {
                    "type": { "type": "string", "default": "achPayment" },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "tags": {
                                "$ref": "tags.json#/components/schemas/tagsPatch"
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false,
                "required": ["type", "attributes"]
            },
            "patchBookPayment": {
                "title": "Patch Book Payment",
                "type": "object",
                "properties": {
                    "type": { "type": "string", "default": "bookPayment" },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "tags": {
                                "$ref": "tags.json#/components/schemas/tagsPatch"
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false,
                "required": ["type", "attributes"]
            },
            "updatePayment": {
                "title": "Patch Payment",
                "type": "object",
                "properties": {
                    "data": {
                        "oneOf": [
                            { "$ref": "#/components/schemas/patchAchPayment" },
                            { "$ref": "#/components/schemas/patchBookPayment" }
                        ]
                    }
                },
                "additionalProperties": false,
                "required": ["data"]
            }
        }
    }
}
